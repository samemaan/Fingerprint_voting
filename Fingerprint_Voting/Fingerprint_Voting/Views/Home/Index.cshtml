<div id="myCarousel" class="carousel slide vertical" data-ride="carousel" style=" height:800px; overflow: hidden">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Images/Geo.png" alt="" style="width: 100%;">
        </div>

        <div class="item">
            <img src="~/Images/geochart.png" alt="" style="width: 100%;">

        </div>

        <div class="item">
            <img src="~/Images/result.png" alt="" style="width: 100%;">
        </div>
        <div class="item">
            <img src="~/Images/vote.PNG" alt="" style="width: 100%;">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" data-target="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" data-target="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
